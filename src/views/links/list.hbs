<div class="container p-4">
    <div class="row">
        {{#each links}}
        <div class="col-md-4 mx-auto mb-4" style="max-width: 20rem;">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{url}}" target=".blank">
                        <h3 class="card-title text-uppercase">
                            {{title}}
                        </h3>
                    </a>
                    <p class="m-2">{{description}}</p>
                    <p>{{timeago created_at}}</p>
                    <a href="/links/delete/{{id}}" class="btn btn-danger">Delete link</a>
                    <a href="/links/edit/{{id}}" class="btn btn-secondary">Edit</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <h2>There are not links saved yet</h2>
                <a href="/links/add">Â¡Created One!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>
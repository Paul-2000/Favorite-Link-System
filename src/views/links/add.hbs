<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Add Link</h3>
                </div>
                <div class="shadow-lg p-3">
                    <form calss="row g-3 needs-validation" novalidate action="/links/add" method="POST">
                        <div class="form-label">
                            <input type="text" class="form-control" name="title" placeholder="Title" autofocus>
                        </div>
                        <div class="form-label">
                            <input type="url" name="url" class="form-control" placeholder="URL">
                        </div>
                        <div class="form-label">
                            <textarea name="description" rows="2" class="form-control" placeholder="Description"></textarea>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success fw-bold">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>